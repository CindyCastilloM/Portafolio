<%- include ('partials/_header.ejs') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card card-body">
                    <form action="/update/<%= data.id %> " method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%= data.nombre %> " class="form-control" required>
                        </div>
            
                        <div class="form-group">
                            <input type="text" name="apellido" value="<%= data.apellido %>" class="form-control mt-2" required>
                        </div>
            
                        <div class="form-group">
                            <input type="text" name="telefono" value="<%= data.telefono %>" class="form-control mt-2" required>
                        </div>
            
                        <button type="submit" class="btn btn-success mt-2">
                            Guardar cambios
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer.ejs') %>